<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.Proveedores" table="proveedores" schema="Hibernate">
        <id name="idProveedor">
            <column name="id_proveedor" sql-type="smallint unsigned"/>
        </id>
        <property name="proveedor">
            <column name="proveedor" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="responsableVentas">
            <column name="responsableVentas" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="dirCp">
            <column name="dirCP" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>