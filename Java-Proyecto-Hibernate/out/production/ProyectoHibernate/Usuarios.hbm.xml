<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.Usuarios" table="usuarios" schema="Hibernate">
        <id name="idUserPass">
            <column name="id_UserPass" sql-type="smallint unsigned"/>
        </id>
        <property name="usuario">
            <column name="usuario" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="contrasena">
            <column name="contrasena" sql-type="varchar(70)" length="70"/>
        </property>
    </class>
</hibernate-mapping>