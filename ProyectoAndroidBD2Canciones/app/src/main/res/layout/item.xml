<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/musica7"
        tools:context=".SecondFragment">


        <ImageView
            android:id="@+id/fondoImagen"
            android:layout_width="128dp"
            android:layout_height="99dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="11dp"
            android:elevation="20dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_anyoEstreno"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nombrePelicula"
            android:layout_width="184dp"
            android:layout_height="23dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/tv_generoPelicula"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.672"
            card_view:layout_constraintStart_toEndOf="@+id/fondoImagen"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_generoPelicula"
            android:layout_width="182dp"
            android:layout_height="24dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/tv_anyoEstreno"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_nombrePelicula"
            card_view:layout_constraintHorizontal_bias="0.333"
            card_view:layout_constraintStart_toStartOf="@+id/tv_anyoEstreno"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_nombrePelicula"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_anyoEstreno"
            android:layout_width="171dp"
            android:layout_height="29dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/fondoImagen"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_generoPelicula" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>