<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musica2"
    tools:context=".FragmentUsuarioNuevo">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/usuarioNuevo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:textColorHint="@color/design_default_color_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ClaveUsuarioNuevo_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ClaveUsuarioNuevo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/Clave"
        android:inputType="textPassword"
        android:textColorHint="@color/design_default_color_primary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="@string/registrarse"
        app:layout_constraintEnd_toEndOf="@+id/usuarioNuevo_id"
        app:layout_constraintStart_toStartOf="@+id/usuarioNuevo_id"
        app:layout_constraintTop_toBottomOf="@+id/ClaveUsuarioNuevo_id" />

</androidx.constraintlayout.widget.ConstraintLayout>